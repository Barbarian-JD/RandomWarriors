<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context="geekybytes.randomwarriors.resultScreen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="#343434"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5F5F5F"
            android:alpha="0.3"
            />
        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#DD0000"
            android:text="RESULT" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/spearman"
            app:border_color="#000000"
            app:border_width="0.5dp"
            android:layout_marginTop="70dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_character_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/profile_pic"
            android:layout_marginTop="20dp"
            android:src="@drawable/spearman"
            android:layout_marginLeft="20dp"
            app:border_color="#000000"
            app:border_width="0.5dp"
            />

        <TextView
            android:id="@+id/text_character_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character 1"
            android:layout_alignBottom="@id/image_character_1"
            android:layout_toRightOf="@id/image_character_1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

        <ImageView
            android:id="@+id/result_character_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/image_character_1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_check_white_36dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_character_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/image_character_1"
            android:layout_marginTop="20dp"
            android:src="@drawable/spearman"
            android:layout_marginLeft="20dp"
            app:border_color="#000000"
            app:border_width="0.5dp"
            />

        <TextView
            android:id="@+id/text_character_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character 2"
            android:layout_alignBottom="@id/image_character_2"
            android:layout_toRightOf="@id/image_character_2"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

        <ImageView
            android:id="@+id/result_character_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/image_character_2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_close_white_36dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_character_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/image_character_2"
            android:layout_marginTop="20dp"
            android:src="@drawable/spearman"
            android:layout_marginLeft="20dp"
            app:border_color="#000000"
            app:border_width="0.5dp"
            />

        <TextView
            android:id="@+id/text_character_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character 3"
            android:layout_alignBottom="@id/image_character_3"
            android:layout_toRightOf="@id/image_character_3"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

        <ImageView
            android:id="@+id/result_character_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/image_character_3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_check_white_36dp"
            />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="0.1"
    android:weightSum="1"
    >
    <Button
        android:id="@+id/button_play_again"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="Play again"
        android:background="#00BB00"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/button_go_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="Go Home"
        android:textColor="#FFFFFF"
        android:background="#00796B"
        />

</LinearLayout>

</LinearLayout>
